<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_up_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.b_entry.activity.EntryFlowActivity">

    <include
        android:id="@+id/icon_brand_included"
        layout="@layout/component_icon_brand_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragm_signup_iconbrand_margintop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="@dimen/fragm_signup_card_width"
        android:layout_height="@dimen/fragm_signup_card_height"
        android:layout_marginTop="@dimen/card_margin_top"
        android:background="@drawable/bg_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_brand_included">

        <include
            android:id="@+id/label_email_text_include"
            layout="@layout/component_label_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/fragm_signup_labelemail_marginstart"
            android:layout_marginTop="@dimen/fragm_signup_labelemail_margintop"
            android:layout_marginEnd="@dimen/fragm_signup_labelemail_marginend" />

        <include
            android:id="@+id/edit_text_email_include"
            layout="@layout/component_edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_email_text_include"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/fragm_signup_edittxtemail_marginstart"
            android:layout_marginTop="@dimen/fragm_signup_edittxtemail_margintop"
            android:layout_marginEnd="@dimen/fragm_signup_edittxtemail_marginend" />

        <include
            android:id="@+id/label_password_include"
            layout="@layout/component_label_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_email_include"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/fragm_signup_labelpass_marginstart"
            android:layout_marginTop="@dimen/fragm_signup_labelpass_margintop"
            android:layout_marginEnd="@dimen/fragm_signup_labelpass_marginend" />

        <include
            android:id="@+id/edit_text_password_include"
            layout="@layout/component_edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_password_include"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/fragm_signup_edittxtpass_marginstart"
            android:layout_marginTop="@dimen/fragm_signup_edittxtpass_margintop"
            android:layout_marginEnd="@dimen/fragm_signup_edittxtpass_marginend" />

        <include
            android:id="@+id/label_confirm_password_include"
            layout="@layout/component_label_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_password_include"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/fragm_signup_labelconfpass_marginstart"
            android:layout_marginTop="@dimen/fragm_signup_labelconfpass_margintop"
            android:layout_marginEnd="@dimen/fragm_signup_labelconfpass_marginend" />

        <include
            android:id="@+id/edit_text_confirm_password_include"
            layout="@layout/component_edit_text_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_confirm_password_include"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/fragm_signup_edittxtconfpass_marginstart"
            android:layout_marginTop="@dimen/fragm_signup_edittxtconfpass_margintop"
            android:layout_marginEnd="@dimen/fragm_signup_edittxtconfpass_marginend" />

        <include
            android:id="@+id/text_terms_and_conditions_include"
            layout="@layout/component_terms_and_cond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_confirm_password_include"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/fragm_signup_termcond_marginstart"
            android:layout_marginTop="@dimen/fragm_signup_termcond_margintop"
            android:layout_marginEnd="@dimen/fragm_signup_termcond_marginend" />

        <include
            android:id="@+id/button_next_include"
            layout="@layout/component_button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_terms_and_conditions_include"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/fragm_signup_btnnext_marginstart"
            android:layout_marginTop="@dimen/fragm_signup_btnnext_margintop"
            android:layout_marginEnd="@dimen/fragm_signup_btnnext_marginend" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>